<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calendarDiary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kotrahope"
        android:textColor="@color/point"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/calendarDiary_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/kotrahope"
        android:maxLines="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/calendarDiary_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/kotrahope"
        android:text="작성한 일기가 없습니다."
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/calendarDiary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:background="@drawable/border_box"
        android:fontFamily="@font/kotrahope"
        android:paddingLeft="13dp"
        android:paddingTop="4dp"
        android:paddingRight="13dp"
        android:paddingBottom="4dp"
        android:text="작성하러 가기"
        android:textColor="@color/point"
        android:visibility="gone" />

</LinearLayout>